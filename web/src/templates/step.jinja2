<br/>
<div class="card">
    {% if step.validated() and step.validation_type == "fakevalidation" %}
        <div class='card-header bg-success text-white'>
            This section has been completed
        </div>
    {% elif step.validated() %}
        <div class='card-header bg-success text-white'>
            {{ step.description | safe }} <span class="badge badge-secondary float-right p-6">{{ step.points }}</span>
        </div>
    {% else %}
        <div class='card-header' style="position: relative;">
            <div class='card-header-left'>{{ step.description | safe }}</div>
            {% if not step.validation_type == "fakevalidation" %}
                <div class="float-right cards-header-right"><span
                        class="badge badge-secondary p-6">{{ step.points }}</span></div>{% endif %}
        </div>
        <div class='card-body'>
            <form action="javascript:void(0);" id="form-{{ step.id }}" onsubmit="submit_step({{ step.id }}, this)">
                <div class="form-group row">
                    <div class="col-10">
                        <input type="text" class="form-control" id="flag-{{ step.id }}" name="flag-{{ step.id }}"
                               placeholder="{% if step.validation_type == 'fakevalidation' %}No answer needed{% else %}Flag{% endif %}"
                               {% if step.validation_type == 'fakevalidation' %}disabled{% endif %}>
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-primary submit-btn" onclick="this.form.submit()"
                               value="{% if step.validation_type == 'fakevalidation' %}Complete{% else %}Submit{% endif %}"/>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
</div>
