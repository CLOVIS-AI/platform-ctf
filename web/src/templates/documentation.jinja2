{% extends "base.jinja2" %}

{% block title %}
    Categories
{% endblock %}

{% block content %}
    <div class="accordion" id="accordion">
        {% for category in data %}
            <div class="card">
                <div class="card-header" id="{{ category }}-header">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target='#{{ category }}'
                                aria-controls="{{ category }}">
                            <i class="fas fa-bookmark"></i> {{ category }}
                        </button>
                    </h5>
                </div>
                <div id="{{ category }}" class="collapse show" aria-labelledby='{{ category }}-header'>
                    <div class="card-body">
                        {% for documentation in data[category] %}
                            <li class="list-group-item">
                                {{ documentation.description }}
                                <br>
                                <a href='{{ documentation.link }}'>
                                    {{ documentation.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <br>
        {% endfor %}
    </div>

{% endblock %}
