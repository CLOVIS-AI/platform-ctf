{% extends "base.jinja2" %}

{% block title %}
    {% if category == "SCENARIO" %}Scenarios{% else %}Trainings{% endif %}

{% endblock %}

{% block content %}
    <div class="card">
        {% for challenge in challenges %}
            <li class="list-group-item">
                <a href='/challenge/{{ challenge.id }}'>
                    {{ challenge.name }} <span
                        class="badge {% if current_user.is_authenticated and current_user.get_points_for_challenge(challenge) == challenge.points %}badge-success{% elif current_user.is_authenticated and current_user.get_points_for_challenge(challenge) > 0 %}badge-info{% else %}badge-secondary{% endif %} float-right">
                {% if current_user.is_authenticated %}{{ current_user.get_points_for_challenge(challenge) }}
                    /{% endif %}{{ challenge.points }}
            </span>
                </a>
            </li>
        {% endfor %}
    </div>

{% endblock %}
