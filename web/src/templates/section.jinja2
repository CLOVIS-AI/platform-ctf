<br/>
<div class="card">
    <h5 class="card-header text-white bg-primary" role="tab">
        <a data-toggle="collapse" href="#section-collapse-{{ section.order }}" aria-expanded="true"
           aria-controls="section-collapse-{{ section.order }}" id="section-heading-{{ section.order }}"
           class="d-block">
            <i class="fa fa-chevron-down float-right"></i>
            {% if section.completed %}
                <span class="task-dropdown-icon"><i class="far fa-check-circle text-success small"></i></span>
                {% set section_number = section.order + 1 %}{{ section_number | safe }} - {{ section.title | safe }}
            {% else %}
                <span class="task-dropdown-icon"><i class="far fa-circle text-secondary small"></i></span>
                {% set section_number = section.order + 1 %}{{ section_number | safe }} - {{ section.title | safe }}
            {% endif %}
        </a>
    </h5>
    <div id="section-collapse-{{ section.order }}"
         class="collapse {% if section.completed %}section-completed{% endif %}"
         aria-labelledby="section-heading-{{ section.order }}" data-parent="#section-accordion" role="tabpanel">
        <div class="card-body">
            {{ section.description | safe }}<br/><br/>
            <hr class="hr-faded">
            {% for step in section.steps %}
                {% include "step.jinja2" %}
            {% endfor %}
        </div>
    </div>
</div>
