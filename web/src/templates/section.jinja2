<br/>
<div class="accordion-item">
    <h5 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#section-collapse-{{ section.order }}" aria-expanded="false" aria-controls="section-collapse-{{ section.order }}" id="section-heading-{{ section.order }}">
            {% if section.completed %}
                <span class="task-dropdown-icon"><i class="far fa-check-circle text-success small"></i></span>
                {% set section_number = section.order + 1 %}{{ section_number | safe }} - {{ section.title | safe }}
            {% else %}
                <span class="task-dropdown-icon"><i class="far fa-circle text-secondary small"></i></span>
                {% set section_number = section.order + 1 %}{{ section_number | safe }} - {{ section.title | safe }}
            {% endif %}
        </button>
    </h5>
    <div id="section-collapse-{{ section.order }}" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="card-body">
                {{ section.description | safe }}<br/><br/>
                <hr class="hr-faded">
                {% for step in section.steps %}
                    {% include "step.jinja2" %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
